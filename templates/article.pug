
extends layout

block append vars
  - bodyclass = 'article-detail'
  - pageId = page.metadata.id

block prepend title
  | #{ page.title + ' - '}

block header
  include author
  h1(data-sb-field-path='.title')= page.title
  p(data-sb-field-path='.author').author
    | #{ 'Written by ' }
    +author(page.metadata.author)

block content
  article.article
    section(data-sb-field-path='.markdown_content').content!= typogr(page.html).typogrify()

block prepend footer
  div.nav
    a(href=contents.index.url) &laquo; Full blog
